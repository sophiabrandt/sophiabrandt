{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "lib": [ "esnext" ],
    "baseUrl": "./",
    "types": ["node", "vitest/globals"],
  },
  "exclude": [ "node_modules" ],
  "include": [
    "src/**/*.ts",
  ]
}
